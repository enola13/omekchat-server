{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/desktop/**",
        "destination": "/client/desktop/index.html"
      },
      {
        "source": "/mobile/**",
        "destination": "/client/mobile/index.html"
      }
    ]
  }
}
