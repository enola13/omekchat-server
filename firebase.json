{
  "hosting": {
    "public": "client",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/desktop/index.html"
      },
      {
        "source": "/desktop",
        "destination": "/desktop/index.html"
      },
      {
        "source": "/mobile",
        "destination": "/mobile/index.html"
      },
      {
        "source": "/auth.js",
        "destination": "/desktop/auth.js"
      },
      {
        "source": "/logo.png",
        "destination": "/desktop/logo.png"
      },
      {
        "source": "/bg-login.mp4",
        "destination": "/desktop/bg-login.mp4"
      },
      {
        "source": "/desktop/pairingClient.js",
        "destination": "/desktop/pairingClient.js"
      }
    ]
  }
}
