{
  "hosting": {
    "public": "client",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/", "destination": "/index.html" },
      { "source": "/desktop/**", "destination": "/desktop/index.html" },
      { "source": "/mobile/**", "destination": "/mobile/index.html" }
    ]
  }
}
